{
    "name": "contentstack/utils",
    "type": "library",
    "description": "Contentstack is a headless CMS with an API-first approach that puts content at the centre. It is designed to simplify the process of publication by separating code from content.",
    "keywords": [
        "contentstack",
        "utils"
    ],
    "homepage": "https://github.com/contentstack/contentstack-utils-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Contentstack",
            "email": "support@contentstack.com",
            "homepage": "https://www.contentstack.com",
            "role": "Owner"
        },
        {
            "name": "Uttam K Ukkoji",
            "email": "uttam.ukkoji@contentstack.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "marc-mabe/php-enum": "^4.7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpunit/php-code-coverage": "^8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Contentstack\\Utils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contentstack\\Tests\\Utils\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
